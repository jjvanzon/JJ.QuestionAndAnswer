  <appSettings>
    <add key="webpages:Version" value="2.0.0.0" />
    <add key="webpages:Enabled" value="false" />
    <add key="PreserveLoginUrl" value="true" />
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
  </appSettings>

  <jj.framework.persistence
    contextType="EntityFramework5"
    dialect="SqlServer2008"
    location="Data Source=.\SQLEXPRESS;Initial Catalog=QuestionAndAnswerDB_DEV;User ID=development;Password=development;Persist Security Info=True"
    modelAssembly="JJ.Persistence.QuestionAndAnswer"
    mappingAssembly="JJ.Persistence.QuestionAndAnswer.EntityFramework5">
    <repositoryAssemblies>
      <repositoryAssembly>JJ.Persistence.QuestionAndAnswer.EntityFramework5</repositoryAssembly>
      <repositoryAssembly>JJ.Persistence.QuestionAndAnswer.DefaultRepositories</repositoryAssembly>
    </repositoryAssemblies>
  </jj.framework.persistence>

  <jj.framework.security>
    <authentication authenticationType="LiteralPassword" />
  </jj.framework.security>

  <jj.presentation.questionandanswer.mvcaspx pageSize="20" maxVisiblePageNumbers="6" />
  
  <system.web>
    <httpRuntime targetFramework="4.5" />
    
    <compilation debug="true" targetFramework="4.5" />

    <pages>
