@* ReSharper disable SuggestVarOrType_SimpleTypes*@

@model IList<QuestionLinkViewModel>

<fieldset>
    <legend>@ResourceFormatter.Links</legend>

    @if (Model.Count != 0)
    {
        <table style="width:500px">

            @foreach (var questionLink in Model)
            {
                using (Html.BeginCollectionItem())
                {
                    @Html.Partial(nameof(ViewNames._EditLink), questionLink)
                }
            }

            <tr style="height:47px">
                <td />
                <td />
                <td style="vertical-align:bottom;text-align:center;">
                    <input type="submit" value="@CommonResourceFormatter.Add" formaction="@Url.Action(nameof(ActionNames.AddLink))" />
                </td>
            </tr>
        </table>
    }
    else
    {
        <br />
        <input type="submit" value="@CommonResourceFormatter.Add" formaction="@Url.Action(nameof(ActionNames.AddLink))" />
    }
</fieldset>
